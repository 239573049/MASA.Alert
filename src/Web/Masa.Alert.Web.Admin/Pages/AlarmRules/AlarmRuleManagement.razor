@inherits AdminCompontentBase
@page "/alarmRules"
<AutoHeight Overflow>
    <HeaderContent>
        <SLabeledRadioGroup @bind-Value="@_queryParam.AlarmRuleType" Dense Class="default-tab" OnChange="RefreshAsync">
            @foreach (var item in Enum.GetValues<AlarmRuleTypes>())
            {
                <SLabeledRadio Value="item" Class="px-6">@T(item.ToString())</SLabeledRadio>
            }
        </SLabeledRadioGroup>
        <div class="ma-0 search-panel my-6">
            @if (advanced)
            {
                <div class="fold d-inline-flex">
                    <EnumSimpleSelect TValue="AlarmRuleSearchTimeTypes" @bind-Value="@_queryParam.TimeType" DefaultText="@T(nameof(_queryParam.TimeType))" OnChange="RefreshAsync"></EnumSimpleSelect>
                    <SDateTimeRangePicker @bind-StartTime="_queryParam.StartTime" @bind-EndTime="_queryParam.EndTime" Class="ml-6" OnChange="RefreshAsync" />
                    @if (_queryParam.AlarmRuleType == AlarmRuleTypes.Log)
                    {
                        <SSimpleSelect @bind-Value="@_queryParam.ProjectIdentity" DefaultText="@T(nameof(_queryParam.ProjectIdentity))" Class="ml-6" OnChange="RefreshAsync"></SSimpleSelect>
                        <SSimpleSelect @bind-Value="@_queryParam.AppIdentity" DefaultText="@T(nameof(_queryParam.AppIdentity))" Class="ml-6" OnChange="RefreshAsync"></SSimpleSelect>
                    }
                    @if (_queryParam.AlarmRuleType == AlarmRuleTypes.Metric)
                    {
                        <SSimpleSelect @bind-Value="@_queryParam.MetricId" DefaultText="@T(nameof(_queryParam.MetricId))" Class="ml-6" OnChange="RefreshAsync"></SSimpleSelect>
                    }
                </div>
            }
            <div class="d-flex search-panel-right @(!isAnimate?"full-width":"") @(isAnimate?"animate__animated":"") @(!advanced?"animate__searchOpen":"animate__searchShrink")">
                <OutlinedSearchTextField @bind-Value="_queryParam.Filter" BackgroundColor="white" OnKeyDown="RefreshAsync" OnClearClick="HandleClearAsync" PrependInnerIcon="@IconConstants.Search" />
                <div @onclick="ToggleAdvanced" class="ml-6 d-flex button fill">
                    <SIcon Class="ma-auto" Color="emphasis2" Size=20>
                        @(!advanced ? "mdi-filter" : "mdi-filter-off")
                    </SIcon>
                </div>
                <SButton Small Color="primary" BorderRadiusClass="rounded-lg" Class="ml-6" OnClick="HandleAdd">@T("Permission.Create")</SButton>
            </div>
        </div>
    </HeaderContent>
    <AutoHeightContent>
        <MRow Style="height:0px">
            @foreach (var _entitie in _entities.Result)
            {
                <MCol Md="3">
                    <AlarmRuleCard AlarmRule="_entitie" OnEdit="()=> HandleEdit(_entitie)" />
                </MCol>
            }
        </MRow>
    </AutoHeightContent>
    <FooterContent>
        <div class="mt-6">
            <SPagination Page="_queryParam.Page" PageSize="_queryParam.PageSize" Total="_entities.Total" PageChanged="HandlePageChanged" PageSizeChanged="HandlePageSizeChanged" />
        </div>
    </FooterContent>
</AutoHeight>

<LogAlarmRuleUpsertModal @ref="_logUpsertModal" OnOk="HandleOk" />
<MetricAlarmRuleUpsertModal @ref="_metricUpsertModal" OnOk="HandleOk" />