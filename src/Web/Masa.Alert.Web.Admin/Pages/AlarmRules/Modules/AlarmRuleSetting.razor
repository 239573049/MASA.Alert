@inherits AdminCompontentBase

<DefaultTitle Class="mb-3">@T("BaseInfo")</DefaultTitle>
<STextField @bind-Value="Model.DisplayName" Label="@T(nameof(Model.DisplayName))" />
<DefaultTitle Class="my-5">@T("TriggerRules")</DefaultTitle>
@foreach (var item in Model.Items)
{
    <STextarea Class="mt-8" @bind-Value="item.Expression" Label="@T(nameof(item.Expression))" Outlined HideDetails="@("auto")">
        <AppendOuterContent>
            <DefaultTooltip Class="ml-2" Tooltip="@T("ExpressionTip")" />
        </AppendOuterContent>
    </STextarea>
    <div class="d-flex mt-2 mb-8">
        <SSelect @bind-Value="item.AlertSeverity" Items="_items" ItemText="v => v" ItemValue="v=> v" Label="@T(nameof(item.AlertSeverity))">
        </SSelect>
        <SSelect Class="ml-2" @bind-Value="item.MessageTemplateId" Items="_items" ItemText="v => v" ItemValue="v=> v" Label="@T(nameof(item.MessageTemplateId))">
        </SSelect>
        <MSwitch @bind-Value="item.IsRecoveryNotification" Inset Class="label my-auto ml-5">
            <LabelContent>
                <span class="default--text subtitle2 my-auto">@T("IsRecoveryNotification")</span>
            </LabelContent>
        </MSwitch>
        <MSwitch @bind-Value="item.IsNotification" Inset Class="label my-auto ml-5">
            <LabelContent>
                <span class="default--text subtitle2 my-auto">@T("IsNotification")</span>
            </LabelContent>
        </MSwitch>
        <SIcon Size="24" OnClick="HandleItemsAdd" Class="ml-5 my-auto">mdi-plus-circle</SIcon>
        @if (Model.Items.IndexOf(item) > 0)
        {
            <SIcon Size="24" Class="ml-4 my-auto" OnClick="()=>HandleItemsRemove(item)">mdi-delete-outline</SIcon>
        }
        <MSpacer></MSpacer>
    </div>
}
<DefaultTitle Class="mb-3">@T("AdvancedConfiguration")</DefaultTitle>
<STextField @bind-Value="Model.ContinuousTriggerThreshold" Label="@T(nameof(Model.ContinuousTriggerThreshold))">
    <AppendOuterContent>
        <DefaultTooltip Class="ml-2" Tooltip="@T("ContinuousTriggerThresholdTip")" />
    </AppendOuterContent>
</STextField>
<MRow Class="mt-3">
    <MCol Md="2">
        <SSelect @bind-Value="Model.SilenceCycle" Items="Enum.GetValues<AlarmRuleSilenceCycle>().ToList()" ItemText="e => T(e==default?string.Empty:e.ToString())" ItemValue="e=> e" Label="@T(nameof(Model.SilenceCycle))">
            <AppendOuterContent>
                <DefaultTooltip Class="ml-2" Tooltip="@T("SilenceCycleTip")" />
            </AppendOuterContent>
        </SSelect>
    </MCol>
    @if (Model.SilenceCycle == AlarmRuleSilenceCycle.Time)
    {
        <MCol Md="2">
            <STextField @bind-Value="Model.SilenceTimeValue" />
        </MCol>
        <MCol Md="2">
            <SSelect @bind-Value="Model.SilenceTimeType" Items="Enum.GetValues<TimeTypes>().ToList()" ItemText="e => T(e==default?string.Empty:e.ToString())" ItemValue="e=> e" />
        </MCol>
    }
    @if (Model.SilenceCycle == AlarmRuleSilenceCycle.Cycle)
    {
        <MCol Md="3">
            <STextField @bind-Value="Model.SilenceCycleValue" Class="ml-2">
                <AppendOuterContent>
                    <span class="default--text subtitle2 my-auto" style="width:40px">@T("Period")</span>
                </AppendOuterContent>
            </STextField>
        </MCol>
    }
</MRow>
<EnableSwitch Class="mt-8 ml-1" @bind-Value="Model.IsEnabled" />

@code {
    [Parameter]
    public AlarmRuleUpsertViewModel Model { get; set; } = new();

    [Parameter]
    public EventCallback<AlarmRuleUpsertViewModel> ModelChanged { get; set; }
    private List<string> _items = new();

    private void HandleItemsAdd()
    {
        Model.Items.Add(new AlarmRuleItemViewModel());
    }

    private void HandleItemsRemove(AlarmRuleItemViewModel item)
    {
        Model.Items.Remove(item);
    }
}
